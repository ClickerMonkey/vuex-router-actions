{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "types": ["node"]
  },
  "include": [
    "src"
  ]
}
